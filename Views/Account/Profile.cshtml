@model SyncChat.Models.Results.Profile;

@{
    ViewData["Title"] = "Profile Page";
}
<style>
    body {
        background-color: var(--darkgrey);
    }
</style>

<main class=" h-100 w-100 d-flex">

    <div class="d-flex justify-content-center">
        <div class="fs-2"> @ViewBag.Username </div>
    </div>

    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success">
            <i class="fas fa-check-circle mr-2"></i> @ViewBag.SuccessMessage
        </div>
    }
    else
    {
        <div asp-validation-summary="ModelOnly" class="alert alert-danger">
            <i class="fas fa-exclamation-circle mr-2"></i> There are errors in your submission:
        </div>
    }
    <hr class="border-secondary" />
    <form asp-controller="Account" enctype="multipart/form-data" asp-action="Save" method="post" class="m-auto w-100 h-100 d-flex align-items-center justify-content-md-center">

        <div class="w-25 h-50  d-flex flex-column align-items-center justify-content-md-center rounded shadow" style="background-color: var(--grey);">
            <h2 class="text-primary mb-2 d-flex align-items-center">
                Edit Profile
            </h2>
            <div class="w-75" style="height: 5%;   border-top: 1px solid var(--lightgrey);"></div>

            <div class="d-flex flex-column ">
                <div class="">
                    <div class="h6 text-white">Display Name</div>
                </div>
                <div class="mb-3">
                    <input class="form-control bg-dark text-white border-secondary text-center" asp-for="User.DisplayName">
                </div>

            </div>

            <div class="d-flex flex-column ">
                <div class="">
                    <div class="h6 text-white">Profile Picture</div>
                </div>
                <img width="128" class=" mx-auto mb-2" src="@Model.User.ProfilePicture.Path" alt="@Model.User.ProfilePicture.Path" />

                <div class="mb-3">
                    <input asp-for="User.ProfilePictureUpload" class="form-control bg-dark text-secondary" type="file" id="formFile">
                </div>

            </div>


            <button type="submit" class="btn btn-primary mb-4 py-2">Save</button>
            <div class="w-75 " style="height: 5%;   border-top: 1px solid var(--lightgrey);"></div>

        </div>
    </form>

</main>
